<Window x:Class="SDKSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:c="clr-namespace:SDKSample"
        Title="MainWindow" SizeToContent="WidthAndHeight">
	<Window.Resources>
		<c:MyData x:Key="myDataSource"/>
	</Window.Resources>
	<Window.DataContext>
		<Binding Source="{StaticResource myDataSource}"/>
	</Window.DataContext>
    <StackPanel>
		<Button Background="{Binding ElementName=tb}"
				Width="150" Height="30">I am bound to be red!</Button>
		
		<!--The following textbox was added by me for fun-->
		<TextBox x:Name="tb" Text="{Binding Path=ColorName, UpdateSourceTrigger=PropertyChanged}"/>
	</StackPanel>
</Window>
