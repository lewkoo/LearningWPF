<Window x:Class="Page_109.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="MainWindow" SizeToContent="WidthAndHeight">
    <ListView>
        <ListView.View>
            <GridView>
                <GridViewColumn Header="Date"/>
                <GridViewColumn Header="Day of Week" DisplayMemberBinding="{Binding DayOfWeek}"/>
                <GridViewColumn Header="Year" DisplayMemberBinding="{Binding Year}"/>
            </GridView>
        </ListView.View>
        <ListViewItem>
            <sys:DateTime>1/1/2007</sys:DateTime>
        </ListViewItem>
        <ListViewItem>
            <sys:DateTime>1/2/2007</sys:DateTime>
        </ListViewItem>
        <ListViewItem>
            <sys:DateTime>1/3/2007</sys:DateTime>
        </ListViewItem>
    </ListView>
</Window>
